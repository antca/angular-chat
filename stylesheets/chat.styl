.chat
  width 500px


.messages
  height 250px
  list-style none
  padding-left 0
  margin 0
  overflow auto

.message
  position relative
  height 25
  line-height 25px
  margin-bottom 2px
  border solid 1px rgba(100, 0, 200, 0.2)
  border-radius 5px
  padding 0px
  background-color rgba(0, 50, 255, 0.1)

.message_sender
  width 150px
  height 25px
  position absolute
  left 0
  margin-right 10px
  text-align right
  border solid 2px rgba(200, 0, 0, 0.5)

.message_message
  position absolute
  left 150px
  margin-left 5px


.message_text-box
  width 100%
